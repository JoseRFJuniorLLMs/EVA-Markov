# Google Gemini API
GOOGLE_API_KEY=your_gemini_api_key_here

# Database (compartilhado com EVA-Mind)
DATABASE_URL=postgresql://user:password@host:5432/eva_db?sslmode=require

# Scheduler
CRON_SCHEDULE=0 23 * * *  # Roda Ã s 23:00 todos os dias
ANALYSIS_LOOKBACK_HOURS=24

# Meta-Agent Configuration
MIN_CONVERSATIONS_FOR_OPTIMIZATION=5
OPTIMIZATION_THRESHOLD_SCORE=7.0
MAX_PROMPT_ITERATIONS=3

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Environment
ENV=production
